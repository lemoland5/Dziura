<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="style.css">

    <title>Document</title>
</head>
<body>
<%- include('../src/nav.ejs') %>
<header>
    <h1>Panel admina </h1> <!-- usuńcie to -->
    <img src="/images/logo.svg" alt="logo ZSTI">
</header>
<main>
<% if (data.length!==0){data.forEach(element => { %>

    <section class="user" style="box-sizing: border-box;
  width: 585px;
  height: 337px;
  background-color: #f3f3f3;
  border-radius: 8px;
  padding: 2rem;
  -webkit-box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  -moz-box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);">
        <h1 style="font-size: 2rem;margin: 0">Username: <%= element.username %></h1>
        <h2>Email: <%= element.email %></h2>
        <form method="post" action="/admin">
            <label for="user" style="display: none">
                <input name="user" type="text" value="<%=element._id%>" >
            </label>
            <input type="submit" value="Zatwierdź">
        </form>
    </section>
<% })}else{ %>
    <h1>Brak niezweryfikowanych użytkowników</h1>
<% } %>
</main>
</body>
</html>